<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dgnt.quickTournamentMaker.activity">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.DirectoryPickerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_directory_picker" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.EliminationTournamentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.DoubleEliminationTournamentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.RoundRobinTournamentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.SwissTournamentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.SurvivalTournamentActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.tournament.SeedingActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_seeding"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.ManagementActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_management"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.HistoryActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_history"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.dgnt.quickTournamentMaker.activity.AppInfoActivity"
            android:label="@string/title_activity_app_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>