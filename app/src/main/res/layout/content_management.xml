<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dgnt.quickTournamentMaker.activity.ManagementActivity"
    tools:showIn="@layout/activity_management">

    <TextView
        android:id="@+id/resultInformation_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/historicalItemHintMsg"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ExpandableListView
        android:id="@+id/person_elv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_vertical_margin" />
</LinearLayout>
