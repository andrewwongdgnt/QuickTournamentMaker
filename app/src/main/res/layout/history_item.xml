<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_item_vertical_margin"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/list_item_vertical_margin">


    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp">


        <ImageView
            android:id="@+id/historicalTournamentType_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_elimination" />

        <ImageView
            android:id="@+id/checked_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checked"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historicalTournamentName_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Large TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge TextLarge Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/history_title_size" />

        <TextView
            android:id="@+id/historicalTournamentDescription_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/history_description_size" />

        <LinearLayout
            android:id="@+id/historicalTournamentDate_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/createdDateLabel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/history_time_size" />

                <TextView
                    android:id="@+id/historicalTournamentCreationDate_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/history_time_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/lastModifiedDateLabel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/history_time_size" />

                <TextView
                    android:id="@+id/historicalTournamentLastModifiedDate_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/history_time_size" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>